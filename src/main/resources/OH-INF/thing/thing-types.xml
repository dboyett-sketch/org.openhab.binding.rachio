<?xml version="1.0" encoding="UTF-8"?>
<thing-types xmlns="http://thing.eclipse.org/schemas/binding/thing-types/v1.0.0">

    <!-- Rachio Cloud Bridge -->
    <bridge-type id="bridge">
        <label>Rachio Cloud Bridge</label>
        <description>Connects to Rachio Cloud API for sprinkler controller management</description>
        <category>Network</category>
        <config-description-ref uri="thing-type:rachio:bridge"/>
        
        <properties>
            <property name="vendor">Rachio</property>
        </properties>
    </bridge-type>

    <!-- Rachio Device (Sprinkler Controller) -->
    <thing-type id="device">
        <label>Rachio Sprinkler Controller</label>
        <description>Rachio Smart Sprinkler Controller Device</description>
        <category>Irrigation</category>
        <listed>true</listed>
        <supported-bridge-type-ids>rachio:bridge</supported-bridge-type-ids>
        <config-description-ref uri="thing-type:rachio:device"/>
        
        <properties>
            <property name="vendor">Rachio</property>
        </properties>
        
        <channels>
            <!-- Control Channels -->
            <channel id="startAllZones" typeId="startAllZones">
                <label>Start All Zones</label>
                <description>Start watering all zones</description>
            </channel>
            <channel id="startNextZone" typeId="startNextZone">
                <label>Start Next Zone</label>
                <description>Start watering the next zone in sequence</description>
            </channel>
            <channel id="stopWatering" typeId="stopWatering">
                <label>Stop Watering</label>
                <description>Stop all watering activities</description>
            </channel>
            <channel id="rainDelay" typeId="rainDelay">
                <label>Rain Delay</label>
                <description>Set rain delay in hours</description>
            </channel>
        </channels>
    </thing-type>

    <!-- Rachio Zone -->
    <thing-type id="zone">
        <label>Rachio Irrigation Zone</label>
        <description>Individual irrigation zone for Rachio sprinkler controller</description>
        <category>Irrigation</category>
        <listed>true</listed>
        <supported-bridge-type-ids>rachio:bridge</supported-bridge-type-ids>
        <config-description-ref uri="thing-type:rachio:zone"/>
        
        <properties>
            <property name="vendor">Rachio</property>
        </properties>
        
        <channels>
            <!-- Control Channels -->
            <channel id="startZone" typeId="startZone">
                <label>Start Zone</label>
                <description>Start watering this zone</description>
            </channel>
        </channels>
    </thing-type>

</thing-types>
